<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OpenPay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/op_primary</item>
        <item name="colorPrimaryVariant">@color/op_primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Estilo para el ImageView -->
    <style name="RoundedIcon">
        <item name="android:background">@drawable/background_round</item>
        <item name="android:layout_width">@dimen/rounded_icon</item>
        <item name="android:layout_height">@dimen/rounded_icon</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">@dimen/small_150</item>
        <item name="android:tint">@color/op_bg_icon</item>
    </style>

    <style name="TitleSection">
        <item name="android:textSize">@dimen/text_normal_3</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/op_primary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:layout_marginStart">@dimen/normal_200</item>
        <item name="android:layout_marginTop">@dimen/normal_200</item>
    </style>


</resources>